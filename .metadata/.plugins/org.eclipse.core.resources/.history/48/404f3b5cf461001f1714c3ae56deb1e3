package com.mk.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.BeanUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.mk.model.Contact;
import com.mk.model.ContactEntity;
import com.mk.repository.ContactRepository;

@Service
public class ContactServiceImpl implements ContactService {

	@Autowired
	private ContactRepository repo;
	
	public Boolean saveContact(Contact c) {
		ContactEntity entity = new ContactEntity();
		//to convert dto(model) object to entity object
		BeanUtils.copyProperties(c, entity);
		ContactEntity savedEntity=repo.save(entity);
		return savedEntity.getContactId() !=null;
	}

}
