		Optional<Contact> opt=repo.findById(cid);
		if(opt.isPresent()) {
			Contact c=opt.get();
			return c;
		}
		return null;
	}

	public boolean updateContact(Contact c) {
		repo.save(c);
		return true;
	}

	public boolean deleteContact(Integer cid) {
		repo.deleteById(cid);
		return true;
	}

